# JobFlow API Security Configuration
# Copy this file to .env and fill in your actual values

# Environment Configuration
ENVIRONMENT=development  # development, testing, staging, production
DEBUG=true

# Database Configuration
# For PostgreSQL (Production):
# DATABASE_URL=postgresql://username:password@localhost:5432/jobflow_db
# For SQLite (Development):
DATABASE_URL=sqlite:///./jobflow_dev.db

# JWT Security Settings
JWT_SECRET_KEY=your-super-secret-jwt-key-at-least-32-characters-long
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24
JWT_REFRESH_EXPIRATION_DAYS=7

# Password Security Policy
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_SPECIAL=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_MAX_ATTEMPTS=5
PASSWORD_LOCKOUT_MINUTES=15

# CORS Configuration
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,chrome-extension://
CORS_ALLOW_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100
LOGIN_RATE_LIMIT_PER_MINUTE=5

# Security Features
ENABLE_CORS=true
ENABLE_CSRF_PROTECTION=false  # Enable in production with proper frontend integration
MAX_REQUEST_SIZE=10485760  # 10MB in bytes

# Encryption
ENCRYPTION_KEY=your-encryption-key-for-sensitive-data-32-chars

# Admin Security (Optional)
# Comma-separated list of admin IP addresses
ADMIN_IPS=127.0.0.1,::1

# AI Integration (Optional)
OPENAI_API_KEY=your-openai-api-key-here

# Email Configuration (For password reset, etc.)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=noreply@yourapp.com

# Production Security Headers (automatically enabled in production)
# These are handled by the SecurityMiddleware

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=/var/log/jobflow/api.log

# File Upload Security
MAX_FILE_SIZE=5242880  # 5MB
ALLOWED_FILE_EXTENSIONS=pdf,doc,docx,txt
UPLOAD_DIRECTORY=./uploads/

# Session Security
SESSION_TIMEOUT_MINUTES=30

# Database Security
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10
DATABASE_POOL_TIMEOUT=30

# Additional Security Settings for Production
# SSL_KEYFILE=/path/to/keyfile.pem
# SSL_CERTFILE=/path/to/certfile.pem
# TRUSTED_PROXY_IPS=10.0.0.1,192.168.1.1

# Monitoring (Optional)
# SENTRY_DSN=your-sentry-dsn
# METRICS_ENABLED=true

# Feature Flags
SOCIAL_FEATURES_ENABLED=true
ACHIEVEMENTS_ENABLED=true
AI_FEATURES_ENABLED=true